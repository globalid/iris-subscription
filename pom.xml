<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>id.global</groupId>
    <artifactId>microservice-parent</artifactId>
    <version>4.3</version>
    <relativePath/>
  </parent>
  <groupId>id.global.iris</groupId>
  <artifactId>iris-subscription</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <scm>
    <connection>scm:git:git@github.com:globalid/iris-subscription.git</connection>
    <developerConnection>scm:git:git@github.com:globalid/iris-subscription.git</developerConnection>
    <url>https://github.com/globalid/iris-subscription</url>
    <tag>HEAD</tag>
  </scm>
  <properties>
    <version.globalid.common>1.1.7</version.globalid.common>
    <version.globalid.event-messaging>1.2.8</version.globalid.event-messaging>
    <!-- plugin dependencies -->
    <asyncapi-schema-generator-maven-plugin.version>1.1.3</asyncapi-schema-generator-maven-plugin.version>
    <!-- variables -->
    <group-id.globalid.common>id.global.common</group-id.globalid.common>
    <artifact-id.globalid.common>globalid-common</artifact-id.globalid.common>
    <version.apicurio>2.1.3.Final</version.apicurio>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>id.global.events</groupId>
        <artifactId>event-messaging</artifactId>
        <version>${version.globalid.event-messaging}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <dependencies>
    <dependency>
      <groupId>id.global.common</groupId>
      <artifactId>globalid-common</artifactId>
      <version>${version.globalid.common}</version>
    </dependency>
    <dependency>
      <groupId>id.global.events</groupId>
      <artifactId>event-messaging</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-junit5</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>id.global.events</groupId>
        <artifactId>asyncapi-schema-generator-maven-plugin</artifactId>
        <version>${asyncapi-schema-generator-maven-plugin.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>generate-schema</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <scanDependenciesDisable>true</scanDependenciesDisable>
          <annotationsArtifacts>
            <annotationsArtifact>${group-id.globalid.common}:${artifact-id.globalid.common}</annotationsArtifact>
          </annotationsArtifacts>
          <excludeFromSchemas>
            com.fasterxml.jackson.databind.JsonNode,java.util.Map
          </excludeFromSchemas>
          <apicurioRegistryUrl>https://schema.internal.globalid.dev/</apicurioRegistryUrl>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
